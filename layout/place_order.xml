<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/pickup_location_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/choose_pickup_location"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/pickup_location_textview"
        android:background="@color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/place_order_location_rv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:listitem="@layout/location_item"
        android:layout_below="@id/line3"
        android:layout_above="@id/line4" />

    <TextView
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@id/place_order_header"
        android:background="@color/black" />

    <TextView
        android:id="@+id/place_order_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/place_order"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_above="@id/line5" />
    <TextView
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@id/paypal_button"
        android:layout_marginBottom="25dp"
        android:background="@color/black" />

    <ImageButton
        android:id="@+id/paypal_button"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_above="@id/visa_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/paypal" />

    <ImageButton
        android:id="@+id/visa_button"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_above="@id/american_express_button"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/visa" />

    <ImageButton
        android:id="@+id/mastercard_button"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/discovery_button"
        android:layout_marginEnd="45dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/mastercard" />

    <ImageButton
        android:id="@+id/american_express_button"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/americanexpress" />

    <ImageButton
        android:id="@+id/discovery_button"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/discovery" />






</RelativeLayout>