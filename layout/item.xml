<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/item_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_view_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_view_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_view_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:text="@string/item_view_description"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_view_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_view_description"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:text="@string/cost"
        android:textColor="@color/black"
        android:textSize="20sp" />


</RelativeLayout>